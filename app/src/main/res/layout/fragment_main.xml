<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.kennedy.walkwithmeapp.MainActivityFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/row0LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/weightLabelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weights_title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/weightProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:max="100"
            android:minHeight="50dp"
            android:minWidth="200dp"
            android:progress="20"
            android:progressTint="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/weightBarTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/progressLabel"
            android:textAlignment="center" />

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabWeightCapture"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_weight"
        android:tint="@android:color/background_light"
        app:backgroundTint="@color/colorPrimary" />



    <TextView
        android:id="@+id/textLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/current_weight"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/row1LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/stepCounterTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_count_step"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stepLabelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/number_of_steps"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/stepsProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:max="100"
            android:minHeight="50dp"
            android:minWidth="200dp"
            android:progress="50"
            android:progressTint="@color/colorPrimary" />

        <TextView
            android:id="@+id/progressBarTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/progressLabel"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="vertical">


        <TextView
            android:id="@+id/durationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_duration"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/durationLblTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/duration"
            android:textAlignment="center" />


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabActive"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_start_activity"
        android:tint="@android:color/background_light"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="normal" />

    <TextView
        android:id="@+id/activeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>
